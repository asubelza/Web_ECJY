# Estudio Contable JY - Production Environment Variables
# Copy this to .env and fill in your values

# MongoDB
MONGO_USER=admin
MONGO_PASSWORD=change_this_secure_password

# JWT
JWT_SECRET=generate_a_secure_random_string_here

# Frontend URL (your domain)
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Estudio Contable JY <your-email@gmail.com>
EMAIL_TO=your-destination-email@gmail.com

# OAuth (Optional - leave empty if not using social login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
